<div class= "container">
  <h1><%= @restaurant.name %> </h1>

    <h2><%=@restaurant.category%></h2>
    <h2><%=@restaurant.address%></h2>
    <h2><%=@restaurant.phone_number%></h2>
    <br>

  <h2> Leave a review </h2>
  <%= render "reviews/form", restaurant: @restaurant, review: @review %>
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %> <%= review.rating %></li>
    <% end %>
  </ul>
  <br>


  <p> <%= link_to "All Restautrants", restaurants_path, class: "btn btn-primary" %> </p>
</div>
